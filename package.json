{
  "name": "traverum",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:widget": "npm run dev --workspace=@traverum/widget",
    "dev:dashboard": "npm run dev --workspace=@traverum/dashboard",
    "build": "turbo run build",
    "build:widget": "npm run build --workspace=@traverum/widget",
    "build:dashboard": "npm run build --workspace=@traverum/dashboard",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  }
}
